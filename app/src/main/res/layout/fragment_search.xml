<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    <variable
        name="fragmentSearch"
        type="com.devfaiz.chatgpt.chat.SearchFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".chat.SearchFragment">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/chatRL"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/chatRL">
            <EditText
            android:id="@+id/textBox"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_centerInParent="true"
            android:layout_marginStart="3sp"
            android:layout_marginTop="3sp"
            android:layout_marginEnd="3sp"
            android:layout_marginBottom="3sp"
            android:layout_toStartOf="@id/send_button"
            android:autofillHints=""
            android:hint="@string/search_box_text"
            android:inputType="text"
            android:textColorHint="@android:color/darker_gray"
            tools:ignore="VisualLintTextFieldSize" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/send_button"
            android:layout_margin="4sp"
            app:fabCustomSize="45sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/send_icon"
            android:contentDescription="@string/button_text"
           />
    </RelativeLayout>


    </RelativeLayout>
</layout>